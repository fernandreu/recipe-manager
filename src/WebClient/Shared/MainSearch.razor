@using Microsoft.AspNetCore.Components.Web
<div>
    <MatTextField @bind-Value="@SearchText" Label="Enter an ingredient you have"/>

    <MatButton Label="Search" Raised="true" Icon="search" OnClick="@OnSearchClicked"/>
</div>


@code {

private string searchText;

[Parameter]
public string SearchText
{
    get => this.searchText;
    set
    {
        if (this.searchText == value)
        {
            return;
        }

        this.searchText = value;
        this.StateHasChanged();
    }
}

[Parameter]
public EventCallback<string> OnSearch { get; set; }

private void OnSearchClicked(MouseEventArgs e)
{
    this.OnSearch.InvokeAsync(this.SearchText).ConfigureAwait(false);
}

}
